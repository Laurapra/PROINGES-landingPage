---
import { Facebook, Linkedin, Twitter } from "lucide-astro";
import { SITE, FOOTER_LINKS } from "../../utils/constants";
import Modal from "../ui/Modal.astro";
import PrivacyContent from "../modal/PrivacyContent.astro";
import TermsContent from "../modal/TermsContent.astro";
---

<footer
  class="bg-background-light dark:bg-background-dark border-t border-slate-200 dark:border-white/10 py-12"
>
  <div class="max-w-7xl mx-auto px-4 md:px-10">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-1">
        <a
          href="#"
          class="flex items-center gap-3 text-secondary dark:text-white mb-4"
        >
          <img
            src="/LOGO-PROINGES-sinBG.png"
            alt="PROINGES Logo"
            class="h-8 w-auto"
          />
          <span class="text-xl font-bold tracking-tight">{SITE.name}</span>
        </a>
        <p class="text-sm text-slate-500 dark:text-slate-400">
          Innovación tecnológica y desarrollo de software a medida para el mundo
          moderno.
        </p>
      </div>
      <!-- Services -->
      <div>
        <h4 class="font-bold text-secondary dark:text-white mb-4">Servicios</h4>
        <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400">
          {
            FOOTER_LINKS.services.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <!-- Company -->
      <div>
        <h4 class="font-bold text-secondary dark:text-white mb-4">Compañía</h4>
        <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400">
          {
            FOOTER_LINKS.company.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social--> 
      <div>
        <h4 class="font-bold text-secondary dark:text-white mb-4">Síguenos</h4>
        <div class="flex gap-4">
          <a 
            href="https://www.linkedin.com/company/proinges-sas" 
            class="text-slate-400 hover:text-primary transition-colors"
            aria-label="LinkedIn"
          >
            <Linkedin class="w-6 h-6" />
          </a>
          <a 
            href="https://www.facebook.com/proinges.sas/?locale=es_LA" 
            class="text-slate-400 hover:text-primary transition-colors"
            aria-label="Facebook"
          >
            <Facebook class="w-6 h-6" />
          </a>
        </div>
      </div>
    </div>
    
      <!-- Bottom Bar -->
      <!-- Bottom Bar -->
      <div
        class="border-t border-slate-200 dark:border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
      >
        <p class="text-sm text-slate-500 dark:text-slate-400">
          © {new Date().getFullYear()}
          {SITE.name}. Todos los derechos reservados.
        </p>
        <div class="flex gap-6 text-sm text-slate-500 dark:text-slate-400">
          <button
            onclick="document.getElementById('privacy-modal')?.classList.remove('hidden'); document.getElementById('privacy-modal')?.classList.add('flex');"
            class="hover:text-primary transition-colors cursor-pointer"
          >
            Privacidad
          </button>
          <button
            onclick="document.getElementById('terms-modal')?.classList.remove('hidden'); document.getElementById('terms-modal')?.classList.add('flex');"
            class="hover:text-primary transition-colors cursor-pointer"
          >
            Términos
          </button>
        </div>
      </div>

      <!-- Privacy Modal -->
      <Modal id="privacy-modal" title="Política de Privacidad">
        <PrivacyContent />
      </Modal>

      <!-- Terms Modal -->
      <Modal id="terms-modal" title="Términos y Condiciones">
        <TermsContent />
      </Modal>
    </div>
  </div>
</footer>
