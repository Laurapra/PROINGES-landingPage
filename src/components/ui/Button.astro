---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  href,
  class: className = '' 
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-bold rounded-lg transition-all transform hover:-translate-y-0.5';

const variantClasses = {
  primary: 'bg-primary hover:bg-sky-600 text-white shadow-lg shadow-primary/30',
  secondary: 'border border-slate-200 dark:border-white/20 hover:bg-slate-50 dark:hover:bg-white/5 text-secondary dark:text-white',
  ghost: 'bg-transparent border-2 border-white/20 hover:bg-white/10 text-white',
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-8 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;

const Tag = href ? 'a' : 'button';
---

<Tag href={href} class={classes}>
  <slot />
</Tag>